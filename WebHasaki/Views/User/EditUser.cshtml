@{
    ViewBag.Title = "Edit User";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    <link href="~/Content/CSS/Admin/cssCRUD.css" rel="stylesheet" />
}

<h2>Edit User</h2>

@using (Html.BeginForm("EditUser", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="fullName">Full Name</label>
        <input type="text" id="fullName" name="fullName" class="form-control" value="@ViewBag.FullName" required />
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" class="form-control" value="@ViewBag.Email" required />
    </div>

    <div class="form-group">
        <label for="phoneNumber">Phone Number</label>
        <input type="text" id="phoneNumber" name="phoneNumber" class="form-control" value="@ViewBag.PhoneNumber" required />
    </div>

    <div class="form-group">
        <label for="gender">Gender</label>
        <select id="gender" name="gender" class="form-control">
            <option value="Nam" @(ViewBag.Gender == "Nam" ? "selected" : "")>Nam</option>
            <option value="Nữ" @(ViewBag.Gender == "Nữ" ? "selected" : "")>Nữ</option>
            <option value="Khác" @(ViewBag.Gender == "Khác" ? "selected" : "")>Khác</option>
        </select>
    </div>

    <div class="form-group">
        <label for="dob">Date of Birth</label>
        <input type="date" id="dob" name="dob" class="form-control" value="@ViewBag.DOB?.ToString("yyyy-MM-dd")" />
    </div>

    <div class="form-group">
        <label for="role">Role</label>
        <select id="role" name="role" class="form-control">
            <option value="admin" @(ViewBag.Role == "admin" ? "selected" : "")>admin</option>
            <option value="manager" @(ViewBag.Role == "manager" ? "selected" : "")>manager</option>
            <option value="user" @(ViewBag.Role == "user" ? "selected" : "")>user</option>
        </select>
    </div>

    <input type="hidden" name="userId" value="@ViewBag.UserID" />

    <button type="submit" class="btn btn-primary">Save Changes</button>
}

<div class="back-button">
    <a href="@Url.Action("Users", "Admin")" class="btn btn-secondary">Back to Users</a>
</div>
