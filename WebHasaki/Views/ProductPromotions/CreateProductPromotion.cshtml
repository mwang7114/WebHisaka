@{
    ViewBag.Title = "Create Product Promotion";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    <link href="~/Content/CSS/Admin/cssCRUD.css" rel="stylesheet" />
}

<h2>Create Product Promotion</h2>

@using (Html.BeginForm("CreateProductPromotion", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="productId">Product</label>
        @Html.DropDownList("productId", (IEnumerable<SelectListItem>)ViewBag.Products, "-- Select Product --", new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="promotionId">Promotion</label>
        @Html.DropDownList("promotionId", (IEnumerable<SelectListItem>)ViewBag.Promotions, "-- Select Promotion --", new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="startDate">Start Date</label>
        <input type="date" id="startDate" name="startDate" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="endDate">End Date</label>
        <input type="date" id="endDate" name="endDate" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Create Product Promotion</button>
}

<div class="back-button">
    <a href="@Url.Action("ProductPromotions", "Admin")" class="btn btn-secondary">Back to Product Promotions</a>
</div>
